<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="5dp"
    android:id="@+id/cardviewIDOrder">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtNameReview"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/ivBookCover"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Person Name"
            android:textSize="20sp"
            android:textStyle="bold"
            />


        <RatingBar
            android:id="@+id/ratingBarReview"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNameReview"
            android:layout_alignStart="@id/txtNameReview"
            android:layout_marginTop="3dp"/>

        <TextView
            android:id="@+id/txtDateReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignRight="@id/txtNameReview"
            android:layout_marginBottom="5dp"
            android:layout_alignBottom="@+id/txtNameReview"
            android:layout_alignParentEnd="true"
            android:text="13-04-2018"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:id="@+id/txtTextReview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/ratingBarReview"
            android:layout_alignLeft="@id/txtNameReview"
            android:layout_marginTop="4dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>