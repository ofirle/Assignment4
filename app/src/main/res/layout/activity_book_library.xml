<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a1a"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="70dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtnew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/spinner_sort"
                android:text="New on the Shelf"
                android:textColor="#e6e6e6"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/bl_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/txtnew"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:id="@+id/txtpopularity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Popularity"
                android:textColor="#e6e6e6"
                android:layout_marginVertical="10dp"
                android:layout_below="@id/bl_new"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/bl_popularity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/txtpopularity"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/txtBiography"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Biography"
                android:textColor="#e6e6e6"
                android:layout_marginVertical="10dp"
                android:layout_below="@id/bl_popularity"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/bl_biography"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/txtBiography"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:id="@+id/txtThriller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thriller"
                android:textColor="#e6e6e6"
                android:layout_marginVertical="10dp"
                android:layout_below="@id/bl_biography"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textSize="20sp"/>
    <android.support.v7.widget.RecyclerView
    android:id="@+id/bl_thriller"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_below="@id/txtThriller"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:id="@+id/txtFiction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fiction"
                android:textColor="#e6e6e6"
                android:layout_marginVertical="10dp"
                android:layout_below="@id/bl_thriller"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textSize="20sp"/>
<android.support.v7.widget.RecyclerView
android:id="@+id/bl_fiction"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_below="@id/txtFiction"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintLeft_toLeftOf="parent"
app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:id="@+id/txtSelfhelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Self Help"
                android:textColor="#e6e6e6"
                android:layout_marginVertical="10dp"
                android:layout_below="@id/bl_fiction"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textSize="20sp"/>
<android.support.v7.widget.RecyclerView
android:id="@+id/bl_selfhelp"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_below="@id/txtSelfhelp"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintLeft_toLeftOf="parent"
app:layout_constraintRight_toRightOf="parent"/>


        </RelativeLayout>


    </ScrollView>
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="#292929"
        app:menu="@menu/menu_nev"

        ></android.support.design.widget.BottomNavigationView>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/ivLogoProgress"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/mobile_ebook_black_orange" />


</RelativeLayout>